import java.util.Random;

public class waterItem extends Item 
{
    private int replenishValue;
    private final int maxReplenishValue = 20;
    
    public waterItem(String name, String itemDescription)
    {
        super(name, itemDescription);
        Random rand = new Random();
        replenishValue = rand.nextInt(maxReplenishValue) + 1; 
    }

    //På något sätt ska man kunna returnera värdet på replenishValue. för att få dynamisk itemDescription
    
    public int getReplenishValue() 
    {
        return replenishValue;
    }
    
